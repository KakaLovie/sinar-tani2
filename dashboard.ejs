<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard K-MAP</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            /* Warna Glass Fresh */
            --glass-bg: rgba(255, 255, 255, 0.25); 
            --glass-border: 1px solid rgba(255, 255, 255, 0.4);
            --fresh-green: #2ecc71;
            --fresh-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--fresh-gradient);
            min-height: 100vh;
            color: #fff;
            overflow-x: hidden;
        }

        /* Navbar Glass */
        .navbar-glass {
            background: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(15px);
            border-bottom: var(--glass-border);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        }

        /* Kartu Glassmorphism */
        .glass-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: var(--glass-border);
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            height: 100%; 
        }
        
        .glass-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.35);
        }

        /* Statistik Angka */
        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
        }

        /* Peta Map */
        #map {
            height: 450px;
            width: 100%;
            border-radius: 16px;
            border: 4px solid rgba(255,255,255,0.6);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            z-index: 1;
        }

        /* Tabel Transparan */
        .table-glass { color: white; }
        .table-glass th {
            background: rgba(0,0,0,0.15);
            color: #fff;
            font-weight: 600;
            border-bottom: 2px solid rgba(255,255,255,0.5);
        }
        .table-glass td {
            background: transparent;
            color: #fff;
            border-bottom: 1px solid rgba(255,255,255,0.3);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-glass sticky-top py-3">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold d-flex align-items-center gap-2" href="#">
                <div class="bg-white text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    <i class="bi bi-flower1 fs-4"></i> 
                </div>
                <span style="font-size: 1.5rem; letter-spacing: 1px;">K-MAP</span>
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item me-3">
                        <div class="d-flex align-items-center gap-2 px-3 py-1 rounded-pill" style="background: rgba(0,0,0,0.2);">
                            <i class="bi bi-person-circle fs-5"></i>
                            <span class="fw-bold"><%= user.fullname %></span>
                            <span class="badge bg-warning text-dark" style="font-size: 0.7rem;"><%= user.role %></span>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="btn btn-danger btn-sm rounded-pill px-4 shadow-sm fw-bold">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4 px-4 pb-5">
        
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="glass-card text-center border-start border-4 border-light d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase fw-bold opacity-75">Total Laporan</h6>
                    <div class="stat-number"><%= stats.total %></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="glass-card text-center border-start border-4 border-danger d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase fw-bold text-danger bg-white rounded-pill px-2 d-inline-block shadow-sm mx-auto">Bahaya</h6>
                    <div class="stat-number"><%= stats.bahaya %></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="glass-card text-center border-start border-4 border-warning d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase fw-bold text-warning bg-white rounded-pill px-2 d-inline-block shadow-sm mx-auto">Waspada</h6>
                    <div class="stat-number"><%= stats.waspada %></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="glass-card text-center border-start border-4 border-success d-flex flex-column justify-content-center">
                    <h6 class="text-uppercase fw-bold text-success bg-white rounded-pill px-2 d-inline-block shadow-sm mx-auto">Aman</h6>
                    <div class="stat-number"><%= stats.aman %></div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="glass-card">
                    <h5 class="fw-bold mb-3"><i class="bi bi-pie-chart-fill me-2"></i>Proporsi Status Laporan</h5>
                    <div style="height: 250px; position: relative;">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="glass-card">
                    <h5 class="fw-bold mb-3"><i class="bi bi-bar-chart-fill me-2"></i>Tren Jenis Hama</h5>
                    <div style="height: 250px; position: relative;">
                        <canvas id="hamaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="glass-card p-0 position-relative overflow-hidden">
                    <div class="p-3 d-flex justify-content-between align-items-center" style="background: rgba(0,0,0,0.1);">
                        <h5 class="m-0 fw-bold"><i class="bi bi-map-fill me-2 text-warning"></i>Peta Sebaran Hama (Live Heatmap)</h5>
                        <% if(user.role !== 'admin') { %>
                            <button class="btn btn-light text-success fw-bold rounded-pill shadow" data-bs-toggle="modal" data-bs-target="#modalLapor">
                                <i class="bi bi-plus-circle-fill me-1"></i> Buat Laporan
                            </button>
                        <% } %>
                    </div>
                    <div id="map"></div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="glass-card h-100">
                    <div class="d-flex justify-content-between mb-3 align-items-center">
                        <h5 class="card-title fw-bold"><i class="bi bi-table me-2"></i>Data Laporan Terkini</h5>
                        <% if(user.role === 'admin') { %>
                            <a href="/admin/export-csv" class="btn btn-success btn-sm border-white shadow-sm"><i class="bi bi-file-earmark-spreadsheet"></i> CSV</a>
                        <% } %>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-glass align-middle">
                            <thead>
                                <tr>
                                    <th>Waktu</th>
                                    <th>Pelapor</th>
                                    <th>Lokasi</th>
                                    <th>Hama</th>
                                    <th>Status</th>
                                    <% if(user.role === 'admin') { %> <th>Aksi</th> <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% reports.forEach(r => { %>
                                <tr>
                                    <td><small><%= r.waktu %></small></td>
                                    <td><%= r.user_name %></td>
                                    <td><%= r.desa %>, <%= r.kec %></td>
                                    <td><%= r.hama %></td>
                                    <td>
                                        <% if(r.status == 'Bahaya') { %> <span class="badge bg-danger shadow-sm">BAHAYA</span>
                                        <% } else if(r.status == 'Waspada') { %> <span class="badge bg-warning text-dark shadow-sm">WASPADA</span>
                                        <% } else { %> <span class="badge bg-success shadow-sm">AMAN</span> <% } %>
                                        
                                        <% if(r.is_verified == 0) { %> 
                                            <span class="badge bg-secondary ms-1">Pending</span>
                                        <% } %>
                                    </td>
                                    <% if(user.role === 'admin') { %>
                                    <td>
                                        <% if(r.is_verified == 0) { %>
                                            <a href="/admin/verify/<%= r.id %>" class="btn btn-success btn-sm rounded-circle shadow-sm" title="Terima"><i class="bi bi-check-lg"></i></a>
                                            <a href="/admin/reject/<%= r.id %>" class="btn btn-danger btn-sm rounded-circle shadow-sm" title="Tolak" onclick="return confirm('Tolak laporan ini?')"><i class="bi bi-x-lg"></i></a>
                                        <% } else { %>
                                            <a href="/admin/delete-report/<%= r.id %>" class="btn btn-outline-light btn-sm rounded-circle" onclick="return confirm('Hapus data permanen?')"><i class="bi bi-trash"></i></a>
                                        <% } %>
                                    </td>
                                    <% } %>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <% if(user.role === 'admin') { %>
            <div class="col-lg-4">
                <div class="glass-card mb-4">
                    <h5 class="fw-bold border-bottom pb-2 mb-3"><i class="bi bi-person-plus-fill me-2"></i>Tambah User</h5>
                    <form action="/admin/create-user" method="POST">
                        <input type="text" name="newFullname" class="form-control mb-2 rounded-pill" placeholder="Nama Lengkap" required>
                        <input type="text" name="newUsername" class="form-control mb-2 rounded-pill" placeholder="Username" required>
                        <input type="password" name="newPassword" class="form-control mb-2 rounded-pill" placeholder="Password" required>
                        <select name="newRole" class="form-select mb-3 rounded-pill">
                            <option value="user">User Biasa</option>
                            <option value="admin">Admin</option>
                        </select>
                        <button type="submit" class="btn btn-warning w-100 rounded-pill fw-bold shadow-sm">Buat User</button>
                    </form>
                </div>
                
                <div class="glass-card">
                    <h5 class="fw-bold border-bottom pb-2 mb-3"><i class="bi bi-people-fill me-2"></i>Daftar User</h5>
                    <div style="max-height: 250px; overflow-y: auto;">
                        <ul class="list-group list-group-flush bg-transparent">
                            <% usersList.forEach(u => { %>
                            <li class="list-group-item bg-transparent text-white border-bottom border-light d-flex justify-content-between align-items-center">
                                <div>
                                    <strong><%= u.username %></strong> <span class="badge bg-light text-dark ms-1"><%= u.role %></span>
                                </div>
                                <button class="btn btn-sm btn-outline-warning rounded-circle" onclick="resetPass('<%= u.username %>')"><i class="bi bi-key-fill"></i></button>
                            </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <div class="modal fade" id="modalLapor" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-dark border-0 shadow-lg rounded-4">
                <div class="modal-header bg-success text-white rounded-top-4">
                    <h5 class="modal-title fw-bold"><i class="bi bi-send-fill me-2"></i>Buat Laporan Baru</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form action="/lapor" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="fw-bold mb-1">Desa</label>
                            <input type="text" name="desa" class="form-control bg-light" required>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold mb-1">Kecamatan</label>
                            <select name="kec" class="form-select bg-light" required>
                                <option value="Kebumen">Kebumen</option>
                                <option value="Gombong">Gombong</option>
                                <option value="Karanganyar">Karanganyar</option>
                                <option value="Kutowinangun">Kutowinangun</option>
                                <option value="Prembun">Prembun</option>
                                <option value="Pejagoan">Pejagoan</option>
                                <option value="Alian">Alian</option>
                                <option value="Sruweng">Sruweng</option>
                                <option value="Bonorowo">Bonorowo</option>
                                <option value="Padureso">Padureso</option>
                                <option value="Puring">Puring</option>
                                <option value="Mirit">Mirit</option>
                                <option value="Ambal">Ambal</option>
                                <option value="Rowokele">Rowokele</option>
                                <option value="Sukorejo">Sukorejo</option>
                            </select>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col">
                                <label class="fw-bold mb-1">Hama</label>
                                <select name="hama" class="form-select bg-light">
                                    <option value="Wereng Coklat">Wereng Coklat</option>
                                    <option value="Tikus">Tikus</option>
                                    <option value="Ulat Grayak">Ulat Grayak</option>
                                    <option value="Walang Sangit">Walang Sangit</option>
                                    <option value="Penggerek Batang">Penggerek Batang</option>
                                    <option value="Kutu Daun">Kutu Daun</option>
                                    <option value="Lainnya">Lainnya</option>
                                </select>
                            </div>
                            <div class="col">
                                <label class="fw-bold mb-1">Status</label>
                                <select name="status" class="form-select bg-light">
                                    <option value="Aman">Aman</option>
                                    <option value="Waspada">Waspada</option>
                                    <option value="Bahaya">Bahaya</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold mb-1">Lokasi (Klik Peta Otomatis)</label>
                            <div class="input-group">
                                <input type="text" name="lat" id="latInput" class="form-control bg-light" placeholder="Lat" readonly>
                                <input type="text" name="lon" id="lonInput" class="form-control bg-light" placeholder="Lon" readonly>
                                <button type="button" class="btn btn-info text-white" onclick="getLocation()"><i class="bi bi-geo-alt-fill"></i> GPS</button>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="fw-bold mb-1">Foto Bukti</label>
                            <input type="file" name="foto" class="form-control bg-light">
                        </div>
                        <button type="submit" class="btn btn-success w-100 fw-bold py-2 shadow">KIRIM LAPORAN</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://leaflet.github.io/Leaflet.heat/dist/leaflet-heat.js"></script>

    <script>
        // === 1. KONFIGURASI CHART.JS ===
        const reportsData = <%- JSON.stringify(reports) %>;
        const statsData = {
            bahaya: <%= stats.bahaya %>,
            waspada: <%= stats.waspada %>,
            aman: <%= stats.aman %>
        };

        // A. Pie Chart (Status)
        const ctxStatus = document.getElementById('statusChart').getContext('2d');
        new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: ['Bahaya', 'Waspada', 'Aman'],
                datasets: [{
                    data: [statsData.bahaya, statsData.waspada, statsData.aman],
                    backgroundColor: ['#e74c3c', '#f1c40f', '#2ecc71'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { labels: { color: 'white' } }
                }
            }
        });

        // B. Bar Chart (Jenis Hama)
        // Hitung frekuensi hama manual dari data
        const hamaCount = {};
        reportsData.forEach(r => {
            hamaCount[r.hama] = (hamaCount[r.hama] || 0) + 1;
        });

        const ctxHama = document.getElementById('hamaChart').getContext('2d');
        new Chart(ctxHama, {
            type: 'bar',
            data: {
                labels: Object.keys(hamaCount),
                datasets: [{
                    label: 'Jumlah Kasus',
                    data: Object.values(hamaCount),
                    backgroundColor: 'rgba(255, 255, 255, 0.8)',
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { ticks: { color: 'white', stepSize: 1 }, grid: { color: 'rgba(255,255,255,0.1)' } },
                    x: { ticks: { color: 'white' }, grid: { display: false } }
                }
            }
        });

        // === 2. LEAFLET MAP ===
        const map = L.map('map').setView([-7.67, 109.65], 11); 
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap',
            maxZoom: 19
        }).addTo(map);

        let heatPoints = [];
        reportsData.forEach(r => {
            let color = '#2ecc71';
            if(r.status === 'Bahaya') color = '#e74c3c';
            if(r.status === 'Waspada') color = '#f1c40f';

            const customIcon = L.divIcon({
                className: 'custom-pin',
                html: `<div style="background-color: ${color}; width: 14px; height: 14px; border-radius: 50%; box-shadow: 0 0 8px ${color}; border: 2px solid white;"></div>`,
                iconSize: [14, 14]
            });

            L.marker([r.lat, r.lon], {icon: customIcon})
                .bindPopup(`<div style="text-align:center;"><b style="color:${color}">${r.hama}</b><br>${r.status}<br><small>Oleh: ${r.user_name}</small></div>`)
                .addTo(map);

            if(r.is_verified === 1) {
                let intensity = 0.2;
                if(r.status === 'Bahaya') intensity = 1.0;
                else if(r.status === 'Waspada') intensity = 0.6;
                heatPoints.push([r.lat, r.lon, intensity]);
            }
        });

        if(heatPoints.length > 0) {
            L.heatLayer(heatPoints, { radius: 25, blur: 15, maxZoom: 17, gradient: {0.4: 'blue', 0.65: 'lime', 1: 'red'} }).addTo(map);
        }

        // === 3. FITUR LAIN (GPS, Notif, Reset Pass) ===
        function getLocation() {
            if (navigator.geolocation) navigator.geolocation.getCurrentPosition(showPosition);
            else Swal.fire('Error', 'Browser tidak support GPS.', 'error');
        }
        function showPosition(position) {
            document.getElementById('latInput').value = position.coords.latitude;
            document.getElementById('lonInput').value = position.coords.longitude;
            Swal.fire('Sukses', 'Lokasi berhasil ditemukan!', 'success');
        }

        <% if(notification) { %>
            Swal.fire({
                title: '<%= notification.type === "success" ? "Berhasil!" : "Gagal!" %>',
                text: '<%= notification.message %>',
                icon: '<%= notification.type %>',
                confirmButtonColor: '#2ecc71'
            });
        <% } %>

        function resetPass(username) {
            Swal.fire({
                title: 'Reset Password ' + username + '?',
                input: 'text',
                inputLabel: 'Password Baru',
                showCancelButton: true,
                confirmButtonText: 'Reset',
                confirmButtonColor: '#f39c12'
            }).then((result) => {
                if (result.isConfirmed && result.value) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/admin/reset-password';
                    
                    const uField = document.createElement('input');
                    uField.name = 'targetUsername'; uField.value = username;
                    const pField = document.createElement('input');
                    pField.name = 'newPass'; pField.value = result.value;

                    form.appendChild(uField); form.appendChild(pField);
                    document.body.appendChild(form); form.submit();
                }
            });
        }
    </script>
</body>
</html>