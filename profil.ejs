<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Saya - SINAR TANI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <!-- SweetAlert2 untuk Notifikasi Keren -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root { --glass-bg: rgba(255, 255, 255, 0.95); --primary-green: #2ecc71; }
        body {
            font-family: 'Poppins', sans-serif;
            background: url('https://images.unsplash.com/photo-1625246333195-58197bd47d72?q=80&w=2070&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            padding-bottom: 80px; /* Ruang untuk Navigasi Bawah */
        }
        .overlay { 
            background: rgba(0, 0, 0, 0.6); 
            min-height: 100vh; 
            width: 100%; 
            position: absolute; top:0; left:0; 
            z-index: -1; 
        }

        /* Bagian Atas (Foto & Nama) */
        .profile-header {
            text-align: center;
            padding: 40px 20px 20px;
            color: white;
        }

        .avatar-container {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto 15px;
            cursor: pointer; /* Menandakan bisa diklik */
        }

        .profile-img {
            width: 120px; height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(255,255,255,0.8);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            background-color: white;
        }

        .edit-icon {
            position: absolute; bottom: 0; right: 0;
            background: var(--primary-green); color: white;
            width: 35px; height: 35px; border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            border: 2px solid white; cursor: pointer;
            transition: transform 0.2s;
        }
        .avatar-container:hover .edit-icon { transform: scale(1.1); }

        /* Kartu Form Glassmorphism */
        .glass-card {
            background: var(--glass-bg);
            border-radius: 25px 25px 0 0; /* Melengkung di atas saja */
            padding: 30px 20px;
            min-height: 60vh; /* Agar mengisi layar bawah */
            margin-top: 20px;
            box-shadow: 0 -10px 30px rgba(0,0,0,0.2);
        }

        .form-control {
            border-radius: 12px;
            padding: 12px;
            border: 1px solid #ddd;
            background: #f8f9fa;
        }
        .form-control:focus {
            background: white;
            box-shadow: 0 0 0 3px rgba(46, 204, 113, 0.2);
            border-color: var(--primary-green);
        }

        /* Bottom Nav (Sama dengan Landing Page) */
        .bottom-nav {
            position: fixed; bottom: 0; left: 0; width: 100%;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            display: flex; justify-content: space-around;
            padding: 12px 0;
            border-top-left-radius: 20px; border-top-right-radius: 20px;
            box-shadow: 0 -5px 20px rgba(0,0,0,0.1);
            z-index: 1000;
        }
        .nav-item {
            text-align: center; color: #95a5a6; text-decoration: none;
            font-size: 0.7rem; display: flex; flex-direction: column; align-items: center;
        }
        .nav-item i { font-size: 1.4rem; margin-bottom: 2px; }
        .nav-item.active { color: var(--primary-green); font-weight: 600; }
        .nav-item:hover { color: var(--primary-green); }
        .nav-item.logout:hover { color: #dc3545; }
    </style>
</head>
<body>
    <div class="overlay"></div>

    <!-- 1. HEADER PROFIL -->
    <div class="profile-header">
        <!-- Klik foto untuk upload -->
        <div class="avatar-container" onclick="document.getElementById('fileInput').click()">
            <img src="<%= user.photo || 'https://cdn-icons-png.flaticon.com/512/847/847969.png' %>" class="profile-img">
            <div class="edit-icon shadow"><i class="bi bi-camera-fill"></i></div>
        </div>
        
        <h4 class="fw-bold mb-0 text-capitalize"><%= user.fullname %></h4>
        <p class="small opacity-75 mb-0">@<%= user.username %> | <%= user.role === 'admin' ? 'Administrator' : 'Petani Member' %></p>
    </div>

    <!-- 2. FORM EDIT DATA -->
    <div class="glass-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="fw-bold text-secondary m-0"><i class="bi bi-pencil-square me-2"></i>Edit Data Diri</h5>
        </div>
        
        <form action="/profil/update" method="POST" enctype="multipart/form-data">
            <!-- Input File Tersembunyi (Dipicu saat klik foto) -->
            <input type="file" id="fileInput" name="profile_photo" style="display: none;" accept="image/*" onchange="previewImage(event)">

            <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Nama Lengkap</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 rounded-start-3"><i class="bi bi-person text-success"></i></span>
                    <input type="text" name="fullname" class="form-control" value="<%= user.fullname %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Bio / Status Petani</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 rounded-start-3"><i class="bi bi-card-text text-success"></i></span>
                    <textarea name="bio" class="form-control" rows="2" placeholder="Contoh: Petani Padi di Desa Karanganyar"><%= user.bio || '' %></textarea>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label small fw-bold text-muted">Nomor WhatsApp</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0 rounded-start-3"><i class="bi bi-whatsapp text-success"></i></span>
                    <input type="number" name="phone" class="form-control" value="<%= user.phone || '' %>" placeholder="08xxxxx">
                </div>
                <div class="form-text small"><i class="bi bi-info-circle me-1"></i>Nomor ini akan muncul otomatis saat Anda menjual hasil panen.</div>
            </div>

            <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-bold shadow mb-3">
                SIMPAN PERUBAHAN
            </button>

            <a href="/logout" class="btn btn-outline-danger w-100 rounded-pill py-2 fw-bold border-2">
                KELUAR APLIKASI
            </a>
        </form>
        
        <div class="text-center mt-4 mb-2">
             <small class="text-muted opacity-50">SINAR TANI v1.0.0</small>
        </div>
    </div>

    <!-- 3. BOTTOM NAVIGATION (Menu Bawah) -->
    <div class="bottom-nav">
        <a href="/" class="nav-item">
            <i class="bi bi-house-door"></i>
            <span>Beranda</span>
        </a>
        <a href="/dashboard" class="nav-item">
            <i class="bi bi-map"></i>
            <span>Peta</span>
        </a>
        <!-- Menu Profil sedang Aktif -->
        <a href="/profil" class="nav-item active">
            <i class="bi bi-person-circle"></i>
            <span>Profil</span>
        </a>
        <a href="/logout" class="nav-item logout">
            <i class="bi bi-box-arrow-right"></i>
            <span>Keluar</span>
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Fungsi Preview Gambar sebelum di-upload
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function(){
                const output = document.querySelector('.profile-img');
                output.src = reader.result;
            };
            if(event.target.files[0]){
                reader.readAsDataURL(event.target.files[0]);
            }
        }

        // Menampilkan Notifikasi Sukses dari Server
        <% if(notification) { %>
            Swal.fire({
                icon: '<%= notification.type %>', // success atau error
                title: '<%= notification.type === "success" ? "Berhasil!" : "Gagal!" %>',
                text: '<%= notification.message %>',
                timer: 2000,
                showConfirmButton: false,
                backdrop: `rgba(0,0,0,0.4)`
            });
        <% } %>
    </script>
</body>
</html>